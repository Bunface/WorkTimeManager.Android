<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle">
        <item name="android:theme">@style/BottomNavigationStyle</item>
        <item name="itemTextAppearance">@style/TextAppearanceCaption</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="materialThemeOverlay">@style/BottomNavigationStyle.ThemeOverlay</item>
    </style>

    <style name="BottomNavigationStyle.ThemeOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="colorDefault">@color/bottom_nav_text_deselected</item>
        <item name="colorSelected">@color/bottom_nav_text</item>
    </style>

    <style name="DefaultIconButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="iconEndPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconSize">15dp</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="iconTint">@color/light_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="DefaultTagStyle" parent="DefaultIconButtonStyle">
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/ctaButtonHeight</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">@dimen/default_corner_size</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/ripple_default</item>
        <item name="iconGravity">textStart</item>
    </style>

    <dimen name="ctaButtonHeight">64dp</dimen>
    
    <style name="TextInputDropdownStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">#FFF</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_default</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_default</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_default</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_default</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAppearance">@style/TextAppearanceBody1.Bold</item>
        <item name="boxBackgroundColor">@color/text_input_bg</item>
    </style>
</resources>